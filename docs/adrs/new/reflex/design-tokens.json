{
  "version": "1.0.0",
  "description": "Design tokens for AI Job Scraper Reflex UI",
  
  "colors": {
    "brand": {
      "primary": {
        "50": "#EFF6FF",
        "100": "#DBEAFE",
        "200": "#BFDBFE",
        "300": "#93C5FD",
        "400": "#60A5FA",
        "500": "#3B82F6",
        "600": "#2563EB",
        "700": "#1D4ED8",
        "800": "#1E40AF",
        "900": "#1E3A8A",
        "950": "#172554"
      },
      "secondary": {
        "50": "#FAF5FF",
        "100": "#F3E8FF",
        "200": "#E9D5FF",
        "300": "#D8B4FE",
        "400": "#C084FC",
        "500": "#A855F7",
        "600": "#9333EA",
        "700": "#7E22CE",
        "800": "#6B21A8",
        "900": "#581C87",
        "950": "#3B0764"
      },
      "accent": {
        "50": "#F0FDF4",
        "100": "#DCFCE7",
        "200": "#BBF7D0",
        "300": "#86EFAC",
        "400": "#4ADE80",
        "500": "#22C55E",
        "600": "#16A34A",
        "700": "#15803D",
        "800": "#166534",
        "900": "#14532D",
        "950": "#052E16"
      }
    },
    
    "semantic": {
      "success": {
        "light": "#10B981",
        "default": "#059669",
        "dark": "#047857"
      },
      "warning": {
        "light": "#FCD34D",
        "default": "#F59E0B",
        "dark": "#D97706"
      },
      "error": {
        "light": "#F87171",
        "default": "#EF4444",
        "dark": "#DC2626"
      },
      "info": {
        "light": "#60A5FA",
        "default": "#3B82F6",
        "dark": "#2563EB"
      }
    },
    
    "neutral": {
      "0": "#FFFFFF",
      "50": "#FAFAFA",
      "100": "#F4F4F5",
      "200": "#E4E4E7",
      "300": "#D4D4D8",
      "400": "#A1A1AA",
      "500": "#71717A",
      "600": "#52525B",
      "700": "#3F3F46",
      "800": "#27272A",
      "900": "#18181B",
      "950": "#09090B",
      "1000": "#000000"
    },
    
    "application_status": {
      "new": "#3B82F6",
      "viewed": "#8B5CF6",
      "saved": "#06B6D4",
      "applied": "#10B981",
      "rejected": "#EF4444",
      "interview": "#F59E0B",
      "offer": "#22C55E",
      "accepted": "#059669",
      "declined": "#71717A"
    }
  },
  
  "typography": {
    "fontFamily": {
      "sans": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', Monaco, Consolas, 'Courier New', monospace",
      "display": "Inter, -apple-system, BlinkMacSystemFont, sans-serif"
    },
    
    "fontSize": {
      "2xs": "0.625rem",
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    
    "fontWeight": {
      "thin": 100,
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800,
      "black": 900
    },
    
    "lineHeight": {
      "none": 1,
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    }
  },
  
  "spacing": {
    "scale": {
      "0": "0",
      "px": "1px",
      "0.5": "0.125rem",
      "1": "0.25rem",
      "1.5": "0.375rem",
      "2": "0.5rem",
      "2.5": "0.625rem",
      "3": "0.75rem",
      "3.5": "0.875rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "7": "1.75rem",
      "8": "2rem",
      "9": "2.25rem",
      "10": "2.5rem",
      "12": "3rem",
      "14": "3.5rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem",
      "28": "7rem",
      "32": "8rem",
      "36": "9rem",
      "40": "10rem"
    },
    
    "padding": {
      "button": {
        "sm": "0.5rem 0.75rem",
        "md": "0.625rem 1rem",
        "lg": "0.75rem 1.25rem"
      },
      "card": {
        "sm": "0.75rem",
        "md": "1rem",
        "lg": "1.5rem"
      },
      "container": {
        "mobile": "1rem",
        "tablet": "1.5rem",
        "desktop": "2rem"
      }
    },
    
    "gap": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem"
    }
  },
  
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },
  
  "borderWidth": {
    "0": "0",
    "1": "1px",
    "2": "2px",
    "4": "4px",
    "8": "8px"
  },
  
  "shadow": {
    "xs": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "sm": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)",
    "none": "none"
  },
  
  "animation": {
    "duration": {
      "instant": "0ms",
      "fast": "150ms",
      "normal": "250ms",
      "slow": "350ms",
      "slower": "500ms"
    },
    
    "easing": {
      "linear": "linear",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "in-out": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    
    "keyframes": {
      "fadeIn": {
        "from": {"opacity": 0},
        "to": {"opacity": 1}
      },
      "slideIn": {
        "from": {"transform": "translateY(10px)", "opacity": 0},
        "to": {"transform": "translateY(0)", "opacity": 1}
      },
      "pulse": {
        "0%, 100%": {"opacity": 1},
        "50%": {"opacity": 0.5}
      }
    }
  },
  
  "breakpoints": {
    "xs": "0px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  
  "zIndex": {
    "base": 0,
    "dropdown": 10,
    "sticky": 20,
    "overlay": 30,
    "modal": 40,
    "popover": 50,
    "toast": 60,
    "tooltip": 70
  },
  
  "components": {
    "button": {
      "variants": {
        "primary": {
          "background": "colors.brand.primary.600",
          "color": "colors.neutral.0",
          "hover": {
            "background": "colors.brand.primary.700"
          }
        },
        "secondary": {
          "background": "colors.brand.secondary.600",
          "color": "colors.neutral.0",
          "hover": {
            "background": "colors.brand.secondary.700"
          }
        },
        "ghost": {
          "background": "transparent",
          "color": "colors.neutral.700",
          "hover": {
            "background": "colors.neutral.100"
          }
        },
        "danger": {
          "background": "colors.semantic.error.default",
          "color": "colors.neutral.0",
          "hover": {
            "background": "colors.semantic.error.dark"
          }
        }
      },
      
      "sizes": {
        "sm": {
          "fontSize": "typography.fontSize.sm",
          "padding": "spacing.padding.button.sm",
          "height": "32px"
        },
        "md": {
          "fontSize": "typography.fontSize.base",
          "padding": "spacing.padding.button.md",
          "height": "40px"
        },
        "lg": {
          "fontSize": "typography.fontSize.lg",
          "padding": "spacing.padding.button.lg",
          "height": "48px"
        }
      }
    },
    
    "card": {
      "background": "colors.neutral.0",
      "border": "1px solid colors.neutral.200",
      "borderRadius": "borderRadius.lg",
      "padding": "spacing.padding.card.md",
      "shadow": "shadow.sm",
      "hover": {
        "shadow": "shadow.md"
      }
    },
    
    "input": {
      "background": "colors.neutral.0",
      "border": "1px solid colors.neutral.300",
      "borderRadius": "borderRadius.md",
      "fontSize": "typography.fontSize.base",
      "padding": "0.5rem 0.75rem",
      "height": "40px",
      "focus": {
        "borderColor": "colors.brand.primary.500",
        "outline": "2px solid colors.brand.primary.200"
      },
      "error": {
        "borderColor": "colors.semantic.error.default",
        "focus": {
          "borderColor": "colors.semantic.error.default",
          "outline": "2px solid colors.semantic.error.light"
        }
      }
    },
    
    "badge": {
      "borderRadius": "borderRadius.full",
      "fontSize": "typography.fontSize.xs",
      "fontWeight": "typography.fontWeight.medium",
      "padding": "0.125rem 0.5rem",
      "height": "20px"
    },
    
    "toast": {
      "borderRadius": "borderRadius.lg",
      "padding": "spacing.padding.card.md",
      "shadow": "shadow.lg",
      "maxWidth": "400px"
    }
  },
  
  "layout": {
    "container": {
      "maxWidth": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      }
    },
    
    "sidebar": {
      "width": {
        "collapsed": "64px",
        "expanded": "240px"
      }
    },
    
    "navbar": {
      "height": "64px"
    },
    
    "grid": {
      "columns": {
        "mobile": 4,
        "tablet": 8,
        "desktop": 12
      },
      "gap": "spacing.gap.md"
    }
  }
}